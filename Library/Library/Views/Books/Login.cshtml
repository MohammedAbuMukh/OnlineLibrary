<head>
    <style>

        .login-page {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }

            .form input {
                font-family: "Roboto", sans-serif;
                outline: 0;
                background: #f2f2f2;
                width: 100%;
                border: 1;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
            }

            .form button {
                font-family: "Roboto", sans-serif;
                text-transform: uppercase;
                outline: 0;
                background: peachpuff;
                width: 100%;
                border: 1;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                -webkit-transition: all 0.3 ease;
                transition: all 0.3 ease;
                cursor: pointer;
            }

            .form .message {
                margin: 15px 0 0;
                color: black;
                font-size: 12px;
            }

                .form .message a {
                    color: peachpuff;
                    text-decoration: none;
                }

    </style>
</head>

<form class="login-page" asp-action="Login" asp-controller="Books" method="post">

    <div class="form">
        <label for="id1">ID</label>
        <input id="id1" type="text" name="stid" />

    

    
        <label for="pass">Password</label>
        <input type="password" id="pass" name="stpass" />

        <button class="message" type="submit"> Login</button>
    </div>

    

</form>